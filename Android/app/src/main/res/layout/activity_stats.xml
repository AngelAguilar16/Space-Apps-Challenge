<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Stats">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/AcumulacionActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acumulacion de microplasticos"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"/>

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="300dip"
            android:layout_below="@id/AcumulacionActual"/>

        <TextView
            android:layout_below="@id/graph"
            android:id="@+id/AcumulacionEn50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acumulacion de microplasticos en 50 aÃ±os"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"/>

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph2"
            android:layout_width="match_parent"
            android:layout_height="300dip"
            android:layout_below="@id/AcumulacionEn50"/>

    </RelativeLayout>

</ScrollView>